<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/dimens_4"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dimens_8"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp">


    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="30"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:src="@drawable/top_earner"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your name"
            android:textStyle="bold"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/dimens_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your hours "
                android:paddingRight="4dp"
                android:textColor="@color/colorTextDefault"
                android:textSize="@dimen/name_size"
                />
            <TextView
                android:id="@+id/role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learning_hours"
                android:paddingRight="2dp"
                android:textColor="@color/colorTextDefault"
                android:textSize="@dimen/name_size" />

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:paddingRight="2dp"
                android:layout_height="wrap_content"
                android:text="Your country"

                android:textColor="@color/colorTextDefault"
                android:textSize="@dimen/name_size" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>